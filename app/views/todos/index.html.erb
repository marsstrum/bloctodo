<div class="row"><div class="col-md-3"></div>
  <div class="col-md-6">
    <h1><%= current_user.name %>'s To-Do List</h1>
      <div id="billboard">
        <table class="table">
          <thead>
            <tr>
              <th>Item</th>
              <th>Days Remaining</th>
              <th>Completed</th>
              <th colspan=2>Manage</th>
            </tr>
          </thead>

          <tbody>
            <% @todos.each do |todo| %>
              <% dl =(7.day - (Time.now.day - todo.created_at.day))/1.day %>
              <tr>
                <td><%= todo.item %></td>
                <td><%= dl %></td>              
                <td><%= todo.completed %></td>
                <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
                <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div><br />
    <h4><%= link_to 'Create a new Task', new_todo_path, class: 'btn btn-success' %>
  </div><div class="col-md-3"></div>
</div>

<br>

